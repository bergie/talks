/* vim: set filetype=css: */
.slide[width] == ::window[width];
.slide[height] == ::window[height];

@vertical .slide gap(0);

#cover-img[center-x] == #cover[center-x];
#cover-img[center-y] == #cover[center-y];
#cover-img[width] == #cover[width] / 2;
#cover-img[height] == #cover[height] / 1.5;
#cover-text[center-x] == #cover[center-x];
#cover-text[top] == #cover[height] / 1.4;
#cover-text[width] == #cover-text[intrinsic-width];
#cover-text[height] == #cover-text[intrinsic-height];

.bergie-link[bottom] == #bergie[bottom];
.bergie-link[width] == #bergie[width] / 3;
.bergie-link[height] == #bergie[height] / 5;
@horizontal .bergie-link;
#bergie {
  background-image: url('http://bergie.iki.fi/about/pictures/amsterdam.jpg');
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: top center;
  background-color: #000000;
}

#bergie ul li {
  list-style: none;
  text-align: center;
  background-color: hsla(180, 11%, 11%, 0.5);
  font-size: 20pt;
  padding-top: 30px;
}

#grail-img[height] == #grail[height];
#grail-img[width] == #grail[width];
#grail-img[top] == #grail[top];
#grail-img[center-x] == #grail[center-x];
#grail-text[top] == #grail[top] + 100;
#grail-text[center-x] == #grail[center-x];
#grail-text[width] == #grail-text[intrinsic-width];
#grail-text[height] == #grail-text[intrinsic-height];

#puredata-img[height] == #puredata[height];
#puredata-img[width] == #puredata[width];
#puredata-img[top] == #puredata[top];
#puredata-img[center-x] == #puredata[center-x];
#puredata-text[top] == #puredata[top] + 100;
#puredata-text[center-x] == #puredata[center-x];
#puredata-text[width] == #puredata[width];
#puredata-text[height] == #puredata-text[intrinsic-height];
#puredata {
  background-color: #ffffff;
}
#puredata-text {
  color: #ffffff;
  background-color: hsla(180, 11%, 11%, 0.8);
  text-align: center;
  padding-top: 10px;
  padding-bottom: 10px;
}

#drawfbp-img[height] == #drawfbp-img[intrinsic-height];
#drawfbp-img[width] == #drawfbp-img[intrinsic-width] !weak;
#drawfbp-img[center-y] == #drawfbp[center-y];
#drawfbp-img[center-x] == #drawfbp[center-x];
#drawfbp-text[bottom] == #drawfbp[bottom] - 100;
#drawfbp-text[center-x] == #drawfbp[center-x];
#drawfbp-text[width] == #drawfbp[width];
#drawfbp-text[height] == #drawfbp-text[intrinsic-height];
#drawfbp[left] == 0;
#drawfbp {
  background-color: #ffffff;
}
#drawfbp-text {
  color: #ffffff;
  background-color: hsla(180, 11%, 11%, 0.8);
  text-align: center;
  padding-top: 10px;
  padding-bottom: 10px;
}
#labview-img[height] == #labview-img[intrinsic-height];
#labview-img[width] == #labview-img[intrinsic-width] !weak;
#labview-img[center-y] == #labview[center-y];
#labview-img[center-x] == #labview[center-x];
#labview-text[bottom] == #labview[bottom] - 100;
#labview-text[center-x] == #labview[center-x];
#labview-text[width] == #labview[width];
#labview-text[height] == #labview-text[intrinsic-height];
#labview[left] == 0;
#labview {
  background-color: #ffffff;
}
#labview-text {
  color: #ffffff;
  background-color: hsla(180, 11%, 11%, 0.8);
  text-align: center;
  padding-top: 10px;
  padding-bottom: 10px;
}

#fbp-book[height] == #fbp-book[intrinsic-height];
#fbp-book[width] == #fbp-book[intrinsic-width];
#fbp-book[right] == #fbp[center-x];
#fbp-book[center-y] == #fbp[center-y];
#fbp-book[left] >= 10;
#fbp[left] == 0;
#fbp {
  background-image: url('../../assets/2013/paul-morrison.jpg');
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: top right;
}

#meemoo-img[height] == #meemoo[height];
#meemoo-img[width] == #meemoo[width];
#meemoo-img[top] == #meemoo[top];
#meemoo-img[center-x] == #meemoo[center-x];
#meemoo-text[top] == #meemoo[top] + 100;
#meemoo-text[center-x] == #meemoo[center-x];
#meemoo-text[width] == #meemoo[width];
#meemoo-text[height] == #meemoo-text[intrinsic-height];
#meemoo {
  background-color: #ffffff;
}
#meemoo-text {
  color: #ffffff;
  background-color: hsla(180, 11%, 11%, 0.8);
  text-align: center;
  padding-top: 10px;
  padding-bottom: 10px;
}

#cr-code[width] == #cr-code[intrinsic-width];
#cr-code[height] == #cr-code[intrinsic-height];
#cr-code[center-x] == #cr[center-x];
#cr-code[center-y] == #cr[center-y];
#cr[left] == 0;

#cps-code[width] == #cps-code[intrinsic-width];
#cps-code[height] == #cps-code[intrinsic-height];
#cps-code[center-x] == #cps[center-x];
#cps-code[center-y] == #cps[center-y];
#cps[left] == 0;

#xmas-code[width] == #xmas-code[intrinsic-width];
#xmas-code[height] == #xmas-code[intrinsic-height];
#xmas-code[center-x] == #xmas[center-x];
#xmas-code[center-y] == #xmas[center-y];
#xmas[left] == 0;

#unixpipe-code[width] == #unixpipe-code[intrinsic-width];
#unixpipe-code[height] == #unixpipe-code[intrinsic-height];
#unixpipe-code[center-x] == #unixpipe[center-x];
#unixpipe-code[center-y] == #unixpipe[center-y];
#unixpipe[left] == 0;

#underground {
  background-image: url('../../assets/2013/underground-map.png');
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: top center;
  background-color: #000000;
}

#theflo {
  background-image: url('../../assets/2013/theflo.png');
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: top center;
  background-color: #000000;
}

#noflo-kickstarter {
